# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Main Bot Database (READ-ONLY)
# If using Railway PostgreSQL, use these from Main Bot DB service:
MAIN_DB_URL=postgresql://postgres:password@host:5432/railway
# OR use individual variables:
MAIN_PGHOST=localhost
MAIN_PGPORT=5432
MAIN_PGDATABASE=railway
MAIN_PGUSER=readonly_bot
MAIN_PGPASSWORD=your_password_here

# Event Bot Database (READ-WRITE)
# If using Railway PostgreSQL, use these from Event Bot DB service:
EVENT_DB_URL=postgresql://postgres:password@host:5432/railway
# OR use individual variables:
EVENT_PGHOST=localhost
EVENT_PGPORT=5432
EVENT_PGDATABASE=railway
EVENT_PGUSER=postgres
EVENT_PGPASSWORD=your_password_here

# Bot Settings
NODE_ENV=production
MAX_ACTIVE_RAIDS=2
REMINDER_30MIN=true
LOG_LEVEL=info
