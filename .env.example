# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Main Bot Database (READ-ONLY)
# Create readonly user first, then use modified DATABASE_URL with readonly credentials
MAIN_DATABASE_URL=postgresql://readonly_bot:password@host:5432/railway

# Event Bot Database (READ-WRITE)
# Use Railway's DATABASE_URL directly
EVENT_DATABASE_URL=postgresql://postgres:password@host:5432/railway

# Bot Settings
NODE_ENV=production
MAX_ACTIVE_RAIDS=2
REMINDER_30MIN=true
